 <ThingDef ParentName="HatMakeableBase">
    <defName>Forsaken_Hood</defName>
    <label>Forsaken Hood</label>
    <description>Work of centuries of armor innovation,the Forsakens have perfected it.</description>
    <techLevel>Ultra</techLevel>
    <useHitPoints>True</useHitPoints>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Display/FHood1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <DeteriorationRate>0</DeteriorationRate>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>66600</MaxHitPoints>
      <Mass>2.7</Mass>
      <ArmorRating_Blunt>.2</ArmorRating_Blunt>
      <ArmorRating_Sharp>.1</ArmorRating_Sharp>
      <ArmorRating_Heat>-.4</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
      <Insulation_Heat>-3</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>6.66</MoveSpeed>
    </equippedStatOffsets>
    <costList>
		<Steel>100</Steel>
    </costList>
		<generateCommonality>1</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/FHoodie/FHood1</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
	 <tags>
        <li>Forsaken</li>
      </tags>
      <defaultOutfitTags>
        <li>Forsaken</li>
      </defaultOutfitTags>
    </apparel>
